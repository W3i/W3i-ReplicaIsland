<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fonts="http://schemas.android.com/apk/res/com.w3i.torch">

    <style name="Theme.ConversationDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_box</item>
    </style>

    <style name="StoreScrollerStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AchivementsProgressTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AchivementNameStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AchivementDescriptionStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ToastAchievementDoneTitle">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/AchievementToastDoneTitle</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ToastAchievementUnlockedTitle">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/AchievementToastUnlockedTitle</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ToastAchievementProgressTitle">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/AchievementToastProgressTitle</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ToastAchievementText">
        <item name="setFont">tahoma_0.TTF</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/AchievementToastText</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ToastAchievementDoneAchievementName">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/AchievementToastDoneAchievementName</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ToastAchievementUnlockedAchievementName">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/AchievementToastUnlockedAchievementName</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ToastAchievementProgressAchievementName">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/AchievementToastProgressAchievementName</item>
        <item name="android:lines">1</item>
    </style>

    <style name="StoreItemName">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/StoreItemName</item>
    </style>

    <style name="StoreItemAlert">
        <item name="setFont">tahoma_0.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/StoreItemAlert</item>
    </style>

    <style name="StoreItemDescription">
        <item name="setFont">tahoma_0.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/StoreItemDescription</item>
    </style>

    <style name="StoreItemCategory">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/StoreItemCategory</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@color/StoreItemCategoryBackground</item>
    </style>

    <style name="StoreDialogTitle">
        <item name="setFont">tahomabd_0.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/StoreDialogTitle</item>
    </style>

    <style name="StoreDialogDescription">
        <item name="setFont">tahoma_0.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/StoreDialogDescription</item>
    </style>

    <style name="ui_start_game_button_style">
        <item name="setFont">BABYU__.TTF</item>
        <item name="addSpacing">true</item>
        <item name="android:textScaleX">0.9</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/ui_start_game_button_color</item>
        <item name="android:lines">1</item>
        <item name="android:shadowColor">@color/ui_start_game_button_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_margin">7dip</item>
    </style>

    <style name="ui_game_mode_locked_style">
        <item name="setFont">BABYU__.TTF</item>
        <item name="android:textScaleX">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ui_game_mode_locked_color</item>
        <item name="android:lines">1</item>
        <item name="android:shadowColor">@color/ui_start_game_button_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>