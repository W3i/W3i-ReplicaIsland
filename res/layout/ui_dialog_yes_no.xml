<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.recharge.torch"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dip" >

    <RelativeLayout
        android:id="@+id/ui_dialog_yn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ui_dialog_yn_separator"
        android:minWidth="250dip" >

        <com.nativex.monetization.custom.views.CustomImageView
            android:id="@+id/ui_dialog_yn_icon"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dip"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/ui_dialog_yn_scroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ui_dialog_yn_icon" >

            <com.recharge.torch.views.CustomFontTextView
                android:id="@+id/ui_dialog_yn_description"
                style="@style/StoreDialogDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:text="@string/info_dialog_description" />
        </ScrollView>
    </RelativeLayout>

    <com.nativex.monetization.custom.views.ScrollingTextView
        android:id="@+id/ui_dialog_yn_title"
        style="@style/StoreDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ui_dialog_yn_close"
        android:textSize="20dip"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/ui_dialog_yn_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/ui_dialog_yn_container"
        android:layout_below="@+id/ui_dialog_yn_title"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:contentDescription="@string/default_image_view_description"
        android:src="@android:drawable/divider_horizontal_dim_dark" />

    <ImageView
        android:id="@+id/ui_dialog_yn_close"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ui_dialog_yn_container"
        android:contentDescription="@string/default_image_view_description"
        android:paddingBottom="12dip"
        android:paddingLeft="12dip"
        android:src="@drawable/info_dialog_close" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ui_dialog_yn_container"
        android:layout_below="@+id/ui_dialog_yn_container"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:weightSum="1" >

        <com.recharge.torch.views.CustomFontTextView
            android:id="@+id/ui_dialog_yn_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:background="@drawable/ui_dialog_buton"
            android:gravity="center"
            android:minHeight="40dip"
            android:minWidth="100dip"
            android:textColor="@android:color/white"
            android:textSize="14dip"
            app:setFont="BABYU__.TTF" />

        <com.recharge.torch.views.CustomFontTextView
            android:id="@+id/ui_dialog_yn_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:background="@drawable/ui_dialog_buton"
            android:gravity="center"
            android:minHeight="40dip"
            android:minWidth="100dip"
            android:textColor="@android:color/white"
            android:textSize="14dip"
            app:setFont="BABYU__.TTF" />
    </LinearLayout>

</RelativeLayout>