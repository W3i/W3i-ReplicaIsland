<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fundsLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/fundsPearlsIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/object_coin01" />

    <TextView
        android:id="@+id/fundsPearlsQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/fundsCrystalsIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="15dip"
        android:src="@drawable/object_ruby01" />

    <TextView
        android:id="@+id/fundsCrystalQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffff0000"
        android:textSize="18dp" />

</LinearLayout>