<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:padding="5dip" >

    <com.w3i.offerwall.custom.views.CustomImageView
        android:id="@+id/itemIcon"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dip" />

    <com.w3i.torch.views.CustomFontTextView
        android:id="@+id/itemName"
        style="@style/StoreItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:layout_toRightOf="@+id/itemIcon"
        android:text="@string/store_item_name" />

    <com.w3i.torch.views.CustomFontTextView
        android:id="@+id/itemErrorMessage"
        style="@style/StoreItemAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@+id/itemIcon"
        android:visibility="gone" />

    <com.w3i.torch.views.CustomFontTextView
        android:id="@+id/itemDescription"
        style="@style/StoreItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemErrorMessage"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@+id/itemIcon"
        android:text="@string/store_item_description" />

    <com.w3i.offerwall.custom.views.AdvancedTextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/itemDescription"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:text="@string/store_item_price_label"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <include
        android:id="@+id/itemLayoutFunds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/itemDescription"
        layout="@layout/coin_layout" />

</RelativeLayout>