<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/mainMenuBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/ui_main_screen_backgroun" />

    <ImageView
        android:id="@+id/mainMenuTitle"
        android:layout_width="300dip"
        android:layout_height="70dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dip"
        android:adjustViewBounds="true"
        android:src="@drawable/ui_main_screen_title" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/storeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ui_extras_store" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/linearModeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ui_extras_linear_mode" />

            <ImageView
                android:id="@+id/linearModeLocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ui_locked" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/levelSelectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ui_extras_level_select" />

            <ImageView
                android:id="@+id/levelSelectLocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ui_locked" />
        </FrameLayout>

        <ImageView
            android:id="@+id/controlsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ui_extras_controls" />
    </LinearLayout>

</FrameLayout>